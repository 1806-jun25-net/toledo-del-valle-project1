@model Project1.WebApp.Models.LocationW

@{
    ViewData["Title"] = "Search Location";
}

<h2>Search Location</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchLocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocationName" class="control-label"></label>
                <input asp-for="LocationName" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@Html.ActionLink("Return to Manager Options", "ManagerOptions") <br />